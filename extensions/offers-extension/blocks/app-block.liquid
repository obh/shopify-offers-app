  {
    "name": "Hello World",
    "target": "section",
    "stylesheet": "style.css",
    "javascript": "myscript.js",
    "settings": [
      { "label": "Color", "id": "color", "type": "color", "default": "#000000" },
      {
        "id": "publishable_id",
        "type": "text",
        "default": "0000",
        "label": "blocks.cf-offers.settings.publishable_id"
      }
    ]
  }
{% endschema %}
